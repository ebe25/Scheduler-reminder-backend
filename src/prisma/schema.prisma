generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UserTodos {
  id        String
  title     String
  status    Status   @default(Pending)
  createdAt DateTime @default(now())
  editedAt  DateTime
}

enum Status {
  Pending
  InProgress
  Completed
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String      @unique
  isOnline  Boolean     @default(false)
  name      String      @unique
  picture   String
  todos     UserTodos[]
  createdAt DateTime    @default(now())
  editedAt  DateTime
}

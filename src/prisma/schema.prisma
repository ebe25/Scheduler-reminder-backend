generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  socketId  String   @unique
  email     String   @unique
  name      String   @unique
  picture   String?
  isOnline  Boolean  @default(false)
  todos     String[]
  createdAt DateTime @default(now())
  editedAt  DateTime @updatedAt()
}

